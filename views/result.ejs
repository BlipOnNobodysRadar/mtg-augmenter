<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Augmented MTG Card List</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>Augmented MTG Card List</h1>

    <!-- Action Buttons -->
    <div class="action-buttons">
      <button id="copyButton" class="action-button action-button--copy">Copy to Clipboard</button>
      <button id="clearCacheButton" class="action-button action-button--clear">Clear Cache</button>
    </div>

    <!-- Display Controls -->
    <div class="display-controls">
      <label class="display-control">
        <input type="checkbox" id="showPrices" checked>
        Show Prices
      </label>
    </div>

    <!-- Price Totals -->
    <div class="price-totals">
      <h2>Price Summary</h2>
      <% data.categories.forEach(category => { %>
        <% if (category.categoryTotal > 0) { %>
          <div class="price-total">
            <strong><%= category.name %>:</strong> $<%= category.categoryTotal %>
          </div>
        <% } %>
      <% }) %>
      <div class="grand-total">
        Total Deck Value: $<%= grandTotal %>
      </div>
    </div>

    <!-- Card List -->
    <div class="card-list">
      <% data.categories.forEach(category => { %>
        <div class="category">
          <% if (category.name.trim() !== 'Uncategorized') { %>
            <div class="category-name"><%= category.name %></div>
          <% } %>

          <% category.cards.forEach(card => { %>
            <div class="card">
              <div class="card-name">
                <%= card.count %>x <%= card.name %> - <%= card.type_line %>
              </div>
              <div class="card-details">
                <p><strong>Mana Cost:</strong> <%= card.mana_cost %></p>
                <p><strong>Type:</strong> <%= card.type_line %></p>
                <p><strong>Description:</strong> <%= card.description %></p>
                <p class="price-info"><strong>Price (Nonfoil USD):</strong> <%= card.usd %></p>
              </div>
            </div>
          <% }) %>
        </div>
      <% }) %>
    </div>

    <!-- Failed Cards -->
    <% if (failedCards && failedCards.length > 0) { %>
      <div class="failed-cards">
        <h2>Failed to Fetch the Following Cards:</h2>
        <ul>
          <% failedCards.forEach(card => { %>
            <li><strong><%= card.name %></strong>: <%= card.error %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <!-- Back Button -->
    <a href="/" class="back-button">&#8592; Back</a>
  </div>

  <script>
    // Price toggle functionality
    const showPricesCheckbox = document.getElementById('showPrices');
    const priceElements = document.querySelectorAll('.price-info');
    const priceTotals = document.querySelector('.price-totals');
  
    showPricesCheckbox.addEventListener('change', function() {
      const showPrices = this.checked;
      
      priceElements.forEach(el => {
        el.classList.toggle('hidden', !showPrices);
      });
      
      if (priceTotals) {
        priceTotals.classList.toggle('hidden', !showPrices);
      }
  
      fetch('/set-preferences', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ showPrices })
      });
    });
  
    // Copy functionality
    document.getElementById('copyButton').addEventListener('click', function() {
      const showPrices = document.getElementById('showPrices').checked;
      let outputText = '';
      
      if (showPrices) {
        outputText += 'Price Summary:\n';
        <% data.categories.forEach(function(category) { %>
          <% if (category.categoryTotal > 0) { %>
            outputText += '<%= category.name %>: $<%= category.categoryTotal %>\n';
          <% } %>
        <% }); %>
        outputText += 'Total Deck Value: $<%= grandTotal %>\n\n';
      }
      
      <% data.categories.forEach(function(category) { %>
        <% if (category.name.trim() !== 'Uncategorized') { %>
          outputText += '<%= category.name %>\n';
        <% } %>
        <% category.cards.forEach(function(card) { %>
          outputText += '<%= card.count %>x <%= card.name %> - <%= card.type_line %>\n';
          outputText += '  Mana Cost: <%= card.mana_cost %>\n';
          outputText += '  Description: <%= card.description.replace(/\n/g, " ").replace(/'/g, "\\'") %>\n';
          if (showPrices) {
            outputText += '  Price (Nonfoil USD): <%= card.usd %>\n';
          }
          outputText += '\n';
        <% }); %>
      <% }); %>
  
      navigator.clipboard.writeText(outputText)
        .then(() => alert('Output copied to clipboard!'))
        .catch(err => {
          console.error('Could not copy text: ', err);
          alert('Error copying the output.');
        });
    });
  
    // Cache clear functionality
    document.getElementById('clearCacheButton').addEventListener('click', function() {
      if (confirm('Are you sure you want to clear the cache? This action cannot be undone.')) {
        fetch('/clear-cache', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ confirm: true })
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            alert('Cache has been successfully cleared.');
            window.location.reload();
          } else {
            alert('Failed to clear cache.');
          }
        })
        .catch(error => {
          console.error('Error clearing cache:', error);
          alert('An error occurred while clearing the cache.');
        });
      }
    });
  </script>
</body>
</html>